<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    android:weightSum="1">
    <ImageView
        android:layout_width="164dp"
        android:id="@+id/club_image"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/output" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:id="@+id/faculty_name"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faculty_desg"
        android:text="Designation"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:text="Qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faculty_qual"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:text="Description"
        android:id="@+id/faculty_desc"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="E-mail "
        android:id="@+id/faculty_mail"
        android:autoLink="email"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Phone"
        android:id="@+id/faculty_phone"
        android:autoLink="phone"
        />

</LinearLayout>




